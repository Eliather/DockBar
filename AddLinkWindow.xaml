<Window x:Class="DockBar.AddLinkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DockBar"
        Title="{local:Loc Key=AddLink_Title}"
        SizeToContent="Height"
        Width="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="{Binding BackgroundBrush}"
        Foreground="{Binding ForegroundBrush}">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{Binding ForegroundBrush}"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Background" Value="#1f1f1f"/>
            <Setter Property="Foreground" Value="{Binding ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>
    <StackPanel Margin="16" Orientation="Vertical">
        <TextBlock Text="{local:Loc Key=AddLink_Target}" FontWeight="SemiBold"/>
        <TextBox x:Name="TargetBox"
                 Height="28"
                 VerticalContentAlignment="Center"
                 Text="{Binding Target, UpdateSourceTrigger=PropertyChanged}"
                 Background="#111"
                 Foreground="{Binding ForegroundBrush}"
                 BorderBrush="#333"
                 BorderThickness="1"/>
        <TextBlock Text="{local:Loc Key=AddLink_NameOptional}" FontWeight="SemiBold" Margin="0,10,0,0"/>
        <TextBox x:Name="NameBox"
                 Height="28"
                 VerticalContentAlignment="Center"
                 Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}"
                 Background="#111"
                 Foreground="{Binding ForegroundBrush}"
                 BorderBrush="#333"
                 BorderThickness="1"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="{local:Loc Key=Common_Cancel}" IsCancel="True"/>
            <Button Content="{local:Loc Key=Common_Save}" IsDefault="True" Click="Save_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
